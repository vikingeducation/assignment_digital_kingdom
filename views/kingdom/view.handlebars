<h1 class="text-center">The Castles in the Kingdom of {{ kingdomName }}</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Registry number</th>
      <th scope="col">Name of the castle</th>
      <th scope="col">Number of Lieges</th>
    </tr>
  </thead>
  <tbody>
  {{#each castleIds }}
    <tr>
      <th scope="row">{{this}}</th>
      <td>
        <a href="/kingdom/{{ ../id }}/castle/{{ this }}/lieges">
          {{{ convertIdsToNames ../castlesTree this "name" }}}
        </a>
      </td>
      <td>{{ getLengthArray ../castlesTree this "liegeIds"  }}</td>
    </tr>
  {{/each}}
  </tbody>
</table>


{{>form name='castle' bigName='Castle' kingdomPrefix='/kingdom/' kingdomId=id castlePrefix='/castles' paramName='name'}}
