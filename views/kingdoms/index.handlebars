<div>
  {{#each kingdoms as |kingdom|}}
    <div>
      <a href="/kingdoms/{{kingdom.kingdomName}}">Name: {{kingdom.kingdomName}}</a>
      <p>King: {{kingdom.king}}</p>
      <p>Queen: {{kingdom.queen}}</p>
      <p>Number of Castles: {{kingdom.castles.length}}</p>
    </div>
  {{/each}}
</div>

<div>
  <form method="POST", action="/kingdoms">
    <input type="text" name="name" placeholder="Enter New Kingdom">
    <input type="submit">
  </form>
</div>