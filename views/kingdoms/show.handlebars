<div class="mdl-cell mdl-cell--5-col mdl-cell--2-offset">
  <h2>{{kingdom}}</h2>

  <hr>
  {{#each allCastles as |castle| }}
  <ul class="demo-list-icon mdl-list">
    <li class="mdl-list__item">
      <span class="mdl-list__item-primary-content">
      <i class="material-icons mdl-list__item-icon">business</i>
      Castle: <a href="/kingdoms/{{../kingdom}}/castles/{{@key}}">{{@key}}</a><br>
      </span>
    </li>
    <li class="mdl-list__item">
      <span class="mdl-list__item-primary-content">
      <i class="material-icons mdl-list__item-icon">people</i>
      Liege Count: {{castle.LiegeCount}}<br>
      </span>
    </li>
    {{#each castle.Lieges as |liege|}}
    <li class="mdl-list__item">
      <span class="mdl-list__item-primary-content">
      <i class="material-icons mdl-list__item-icon">person</i>
      Liege: <a href="/kingdoms/{{../../kingdom}}/castles/{{@../key}}/lieges/{{@key}}">{{@key}}</a>
      </span>
    </li>
    {{/each}}
  </ul>
  <hr>
  {{/each}}
</div>
<div class="mdl-cell mdl-cell--2-col mdl-cell--1-offset">
  <h4>Add New Castle</h4>
  <form action="/kingdoms/{{kingdom}}/castles/" method="POST" id="submit">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" type="text" name="castle">
      <label class="mdl-textfield__label" for="castle">Castle</label>
    </div>
    <br>
    <button type="submit" form="submit" value="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
    Submit
    </button>
  </form>
</div>