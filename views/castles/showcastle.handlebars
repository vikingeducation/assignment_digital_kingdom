<div class="box">
  <h2 class="title">Castle {{castle}} in {{kingdom}}</h2>
  <div class="box-copy">
    {{#each leiges as |leige|}}
      <div class="row">
        <a href="/kingdoms/{{../kingdom}}/castles/{{../castle}}/leiges/{{leige.name}}">{{leige.name}}</a>
        {{#each leige.vassals as |vassal|}}
        <h5>{{vassal}}</h5>
        {{/each}}
      </div>
    {{/each}}
  </div>
</div>

<div class="box">
  <h2 class="title">Add a Leige</h2>
  <div class="box-copy">
    <form action="/kingdoms/{{kingdom}}/castle/{{castle}}/leige" method="POST">
      <input type="text" name="leige" placeholder="Leige Name">
      <input type="submit" value="Add New Liege" method="post">
    </form>
  </div>
</div>
