<div>
  <h3>Kingdom: {{kingdom}}</h3>
    <div>
      <div>
        <h4>Castle: {{castle}}</h4>
        <h5>Lieges:</h5>
        </div>
        {{#each allLieges as |liege|}}
          <div class="list-div small-margin">
            <a href="/kingdoms/{{../kingdom}}/{{../castle}}/{{liege.liegeName}}">
              {{liege.liegeName}}
            </a>
          <div>
            Number of Vassals: {{liege.vassals.length}}            
          </div>
        </div>
      {{/each}}
    </div>
  </div>

<div class="form-div extra-space">
  <h2>Add Liege</h2>
  <div class="form-div">
    <form action="/kingdoms/{{kingdom}}/{{castle}}" method="post">
      <label>Liege: </label>
      <input type="text" name="liegeName" id="liegeName" placeholder="Name">

      <input type="submit" value="Add New Liege" method="post">
    </form>
  </div>
</div>
