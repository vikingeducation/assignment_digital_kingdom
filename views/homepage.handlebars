<div class='main'>
  <h1 class='highlighted'>Kingdoms</h1>
  <div class="container">
    {{#each kingdoms as |kingdom|}}
    <div class="kingdom focus" id={{kingdom.id}}>
      <div class='image'>
        <a href={{kingdom}}>
          <h2 class="grayed">{{kingdom.name}}</h2>
        </a>
      </div>
      <section>
        <h3 class="grayed">King: {{kingdom.king}}</h3>
        <h3 class="grayed">Queen: {{kingdom.queen}}</h3>
        <h4 class="grayed"># of Castles: {{kingdom.castleIds.length}}</h4>
      </section>
    </div>
    {{/each}}
  </div>
